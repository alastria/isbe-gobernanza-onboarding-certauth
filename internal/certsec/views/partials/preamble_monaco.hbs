{{ define "preamble_monaco" }}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}} - Admin Dashboard</title>
    <link rel="stylesheet" href="/static/css/w3css.css">

    <style>
        .margin-bottom-small {
            margin-bottom: 4px !important;
        }
    </style>
    <style>
        /* Make the editor fill the page */
        html,
        body,
        #container {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }
    </style>


</head>

<body>


    <!-- Sidebar -->
    <div class="w3-sidebar w3-bar-block" style="width:150px;">

        <div class="company-logo">
            <a href="https://redisbe.com">
